@model ClienteModel

@{
    ViewData["Title"] = "Cliente - Editar";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Editar</h2>

                <form action="/Cliente/Editar" method="post">
                    <input type="hidden" name="ClienteId" value="@Model.ClienteId" />
                    <div class="form-group">
                        <label class="control-label">Nome</label>
                        <input class="form-control col-5" name="Nome" value="@Model.Nome" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input class="form-control col-5" name="Email" value="@Model.Email" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Data Nascimento</label>
                        <input class="form-control col-5" name="DataNascimento" value="@Model.DataNascimento" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Observação</label>
                        <textarea class="form-control" name="Observacao">@Model.Observacao</textarea>
                    </div>

                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>
