@model ClienteModel

@{
    ViewData["Title"] = "Cliente - Editar";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Editar</h2>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-warning" role="alert"></div>
                }

            <form asp-controller="Cliente" asp-action="Editar" method="post">
                <div class="form-group">
                    <label class="control-label" asp-for="Nome"></label>
                    <input class="form-control col-5" asp-for="Nome" />
                    <span class="text-danger" asp-validation-for="Nome"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Email"></label>
                    <input class="form-control col-5" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="DataNascimento"></label>
                    <input class="form-control col-5" type="datetime-local" value="@Model.DataNascimento" />
                    <span class="text-danger" asp-validation-for="DataNascimento"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Observacao"></label>
                    <textarea class="form-control col-5" asp-for="Observacao"></textarea>
                    <span class="text-danger" asp-validation-for="Observacao"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="RepresentanteId"></label>
                    <select asp-for="RepresentanteId" asp-items="@ViewBag.representantes">
                        <option value="">Selecione</option>
                    </select>
                    <span class="text-danger" asp-validation-for="RepresentanteId"></span>
                </div>


                <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
            </form>
            </div>
        </div>
    </div>
</div>
